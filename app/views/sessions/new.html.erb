<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag sessions_path do %>
      <%= flash[:error] %>

      <table cellpadding="0" cellspacing="0" style="font-family:arial;font-size:12px;text-align:right;">
        <tr>
          <td><%= label_tag :email %>&nbsp;</td>
          <td><%= text_field_tag :email, params[:email] %></td>
        </tr>
        <tr>
          <td><%= label_tag :password %>&nbsp;</td>
          <td><%= password_field_tag :password %></td>
        </tr>
      </table>

      <%= submit_tag "Sign in" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>